<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".CreditFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <include layout="@layout/credit_up"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_25sdp"
                app:layout_constraintTop_toBottomOf="@id/start"
                >

                <LinearLayout
                    android:id="@+id/panelLong"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textColor="@color/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ICON DESIGNER"
                        android:fontFamily="@font/barlow_semi_bold"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hüseyin Talha Baycan"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textColor="@color/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FRONTEND PROGRAMMING"
                        android:fontFamily="@font/barlow_semi_bold"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hüseyin Talha Baycan"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textColor="@color/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BACKEND PROGRAMMING"
                        android:fontFamily="@font/barlow_semi_bold"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hüseyin Talha Baycan"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                    android:layout_marginTop="@dimen/_30sdp"
                    android:textColor="@color/background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UI/UX DESİGN"
                    android:fontFamily="@font/barlow_semi_bold"
                    android:gravity="left"
                    android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hüseyin Talha Baycan"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textColor="@color/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TRANSLATION"
                        android:fontFamily="@font/barlow_semi_bold"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Volunteers from all over the world"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"/>


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_500sdp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </ScrollView>

</FrameLayout>